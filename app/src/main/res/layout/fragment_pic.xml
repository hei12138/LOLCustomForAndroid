<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#F9F9F9"
              android:paddingTop="20dp"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <Button
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/wallpaper_original"
            android:background="@drawable/selector_pic_topbutton"
            android:drawableTop="@mipmap/shape_rectangle"
            android:drawablePadding="8dp"
            android:text="原画"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <Button
            android:paddingTop="10dp"

            android:paddingBottom="10dp"
            android:id="@+id/wallpaper_splash"
            android:background="@drawable/selector_pic_topbutton"
            android:drawableTop="@mipmap/shape_circle"
            android:drawablePadding="8dp"
            android:text="闪屏"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <Button
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/wallpaper_distribute"
            android:background="@drawable/selector_pic_topbutton"
            android:drawableTop="@mipmap/shape_triangle"
            android:drawablePadding="8dp"
            android:text="投稿"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/wallpaper_list"
        android:background="@drawable/selector_pic_button_bg"
        android:text="壁纸"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/wallpaper_bing"
        android:background="@drawable/selector_pic_button_bg"
        android:text="每日一图"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/wallpaper_club"
        android:background="@drawable/selector_pic_button_bg"
        android:text="俱乐部"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>